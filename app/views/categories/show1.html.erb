<html>
<head>
  <meta charset="UTF-8">
  <title>Eventos de emprendimiento</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="assets/stylesheets/welcome.scss">
  <link rel="stylesheet" href="assets/stylesheets/application.scss">
</head>
<body>
  <header>
  
<div class="container-fluid ">
      <div class="col-xs-12">
      <nav class="navbar navbar-custom navbar-fixed-top ">
        <div>
          <div class="col-xs-2">
            <%= image_tag "op.png", class: "img-logo" %>
          </div>
            <div class="col-xs-offset-5 col-xs-3 col-sm-offset-5 col-sm-5 col-md-offset-6 col-md-4">
              <%= link_to 'Inicio', welcome_index_path, class: 'btn btn-primary ' %>
              <%= link_to 'Publicar', new_category_path, class: 'btn btn-success ' %>
              <%= link_to 'Publicaciones', categories_path,  class: 'btn btn-warning' %>
              <%= link_to 'Cerrar Sesión', destroy_user_session_path, method: 'delete', class: 'btn btn-danger ' %>
            </div>
        <!-- fin del if  -->
        </div>
  </nav>
  </div>
</div>
</header>
<br/>
<br/>
<br/>
<br/>
    
     <table>
       <thead>
         <tr>
            <th>
              <h1 class="text-center"> <%= @category.title %></h1>
              </th>
        </tr>

        <tr>
           <th class="col-xs-12 text-center">
             <div class="col-xs-6">
                <label class="text-right"> Tipo:&nbsp;&nbsp;</label> <%= @category.category_type %>  
             </div>
             <div class="col-xs-6">
                <label class="text-left" >Lugar:&nbsp;&nbsp;</label><%= @category.location %>
             </div>
           </th>
         </tr>

         <tr>
         <th class="col-xs-12 text-center">
             <div class="col-xs-3">
              <label for="">Fecha de inicio:&nbsp;&nbsp;</label>
                <%= @category.start_date.strftime("%d-%m-%Y") %>
             </div>
             <div class="col-xs-3">
                <label for="">Días:&nbsp;&nbsp;</label><%= @category.duration %>
             </div>
             <div class="col-xs-3">
             <time time="20:00">
                <label for="">Hora de inicio:&nbsp;&nbsp;</label><%= @category.start_hour.strftime("%r") %>
             </time>
             </div>
             <div class="col-xs-3">
                <label for="">Hora de finalización:&nbsp;&nbsp;</label><%= @category.end_hour.strftime("%r") %>
             </div>
           </th>
         </tr>
         <tr>
          <th class="col-xs-12 text-center">
          <div class="col-xs-4">
            <label for="">Precio de la entrada:&nbsp;&nbsp;</label><%= @category.cost %>
          </div>
          <div class="col-xs-4">
            <label for="">Teléfono:&nbsp;&nbsp;</label><%= @category.phone%>
          </div>
          <div class="col-xs-4">
            <a href="<%= @category.web_site%>">Visítanos en nuestro sitio web</a>
            
          </div>
          </th>
         </tr>
         <tr>
           <th class="col-xs-6">
              <textarea rows="10" style="width:100%" " readonly><%= @category.description %></textarea>
           </th>
         </tr>
         
<!--aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa-->

       </thead>
     </table>

<div class="container-fluid">
      <div class="row"> 
        <div id="carousel-example-generic" class="carousel slide carousel-custom" data-ride="carousel">
      <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active ">
            </li>
            <li data-target="#carousel-example-generic" data-slide-to="1" class="">
            </li>
            <li data-target="#carousel-example-generic" data-slide-to="2" class="">
            </li>
          </ol>
            <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
            <div class="col-xs-12">
                <% if @category.avatar1.url != "/images/" %>
                            <%= image_tag(@category.avatar1.url, :class => "img-responsive ") %>
                          <% else %>
                            <%= image_tag("sin_imagen.jpg", :class => "img-responsive ") %>
                          <% end %>    
            </div>
            </div>
            <div class="item">
            <div class="col-xs-12">
                <% if @category.avatar2.url != "/images/" %>
                            <%= image_tag(@category.avatar2.url, :class => "img-responsive ") %>
                          <% else %>
                            <%= image_tag("sin_imagen.jpg", :class => "img-responsive ") %>
                          <% end %>    
            </div>
            </div>
            <div class="item">
            <div class="col-xs-12">
                <% if @category.avatar3.url != "/images/" %>
                            <%= image_tag(@category.avatar3.url, :class => "img-responsive ") %>
                          <% else %>
                            <%= image_tag("sin_imagen.jpg", :class => "img-responsive ") %>
                          <% end %>        
          </div>
          </div>
        </div>
      <!-- Controls -->
          <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
    </div>
      <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
      <!-- Include all compiled plugins (below), or include individual files as needed -->
      <script src="js/bootstrap.min.js"></script> 
    </div>

  
  </body>

</html>
